{%- if section.settings.slide_height == 'adapt_image' -%}
  {%- assign first_block = section.blocks.first -%}
  {%- assign image_desktop = first_block.settings.image_desktop -%}
  {%- assign image_mobile = first_block.settings.image_mobile -%}

  {%- if image_desktop and image_mobile -%}
    <style>
      @media screen and (max-width: 749px) {
        #Slider-{{ section.id }}::before,
        #Slider-{{ section.id }} .media::before,
        #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
          padding-bottom: {{ 1 | divided_by: image_mobile.aspect_ratio | times: 100 | round: 2 }}%;
          content: '';
          display: block;
        }
      }

      @media screen and (min-width: 750px) {
        #Slider-{{ section.id }}::before,
        #Slider-{{ section.id }} .media::before {
          padding-bottom: {{ 1 | divided_by: image_desktop.aspect_ratio | times: 100 | round: 2 }}%;
          content: '';
          display: block;
        }
      }
    </style>
  {%- endif -%}
{%- endif -%}

<style>
  .slideshow__controls{
    display: none !important;
  }

  /* Desktop: vertical dots on right side */
@media screen and (min-width: 750px) {
  .slider-counter-wrapper-in-slide {
    position: absolute;
    top: 50%;
    right: 0rem;
    /* transform: translateY(-50%); */
    z-index: 3;
  }

  .slider-counter--dots {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
}

/* Mobile: horizontal dots centered at bottom */
@media screen and (max-width: 749px) {
  .slider-counter-wrapper-in-slide {
    position: absolute;
    bottom: 1.2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
  }

  .slider-counter--dots {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
  }
}

/* Dot styling (optional improvements) */
.slider-counter__link--dots .dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: white;
  opacity: 0.5;
  transition: opacity 0.2s;
}

.slider-counter__link--dots.is-active .dot {
  opacity: 1;
}

.slideshow-dots-wrapper {
  position: absolute;
  pointer-events: auto;
  z-index: 3;
}

/* Desktop – right side */
@media screen and (min-width: 750px) {
  .slideshow-dots-wrapper {
    top: 50%;
    right: 1rem;
    transform: translateY(-50%);
  }

  .slider-counter--dots {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .slideshow__control-wrapper{
    flex-direction: column;
  }
}

/* Mobile – bottom center */
@media screen and (max-width: 749px) {
  .slideshow-dots-wrapper {
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
  }

  .slider-counter--dots {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
  }
}

/* Dot appearance */
.slider-counter__link--dots .dot {
  width: 10px;
  height: 10px;
  background: white;
  opacity: 0.5;
  border-radius: 50%;
  transition: opacity 0.2s ease;
}

.slider-counter__link--dots.is-active .dot {
  opacity: 1;
}

