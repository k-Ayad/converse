<style>
  /* ==== Filter Buttons ==== */
  .filter-actions .btn.filter-btn {
    background-color: #000; /* Reset button black */
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 1px;
    padding: 12px 20px;
    border-radius: 0;
  }

  .filter-actions .btn.filter-btn.apply {
    background-color: #c10c0c; /* Filter button red */
  }

  .filter-actions .btn.filter-btn.apply:hover {
    opacity: 0.85;
  }

  /* ==== Accordion Headings ==== */
  .product-categories h3 {
    font-size: 13px;
    text-transform: uppercase;
    font-weight: 700;
    margin: 15px 0;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 5px;
  }

  .price-range-currency {
    font-size: 12px;
    font-weight: normal;
    color: #555;
  }

  /* Arrow indicator */
  .product-categories h3::after {
    content: '▼';
    font-size: 11px;
    margin-left: auto;
    transition: transform 0.3s;
  }
  .product-categories h3[aria-expanded='true']::after {
    transform: rotate(180deg);
  }

  /* ==== Custom Checkboxes ==== */
  .custom-control {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    cursor: pointer;
    font-size: 14px;
  }
  .fill-control-input {
    display: none;
  }
  .fill-control-indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #666;
    border-radius: 50%;
    margin-right: 8px;
    position: relative;
  }
  .fill-control-input:checked + .fill-control-indicator {
    border-color: #c10c0c;
    background-color: #c10c0c;
  }
  .fill-control-input:disabled + .fill-control-indicator {
    opacity: 0.4;
    cursor: not-allowed;
  }
  .fill-control-description {
    font-size: 14px;
    color: #222;
    font-weight: 500;
  }

  /* ==== Price Range Slider ==== */
  #slider-range {
    margin: 20px 10px;
    height: 4px;
    background: #ddd;
    position: relative;
    border-radius: 2px;
  }
  .ui-slider-range {
    background: #c10c0c !important;
    height: 4px;
    position: absolute;
  }
  .ui-slider-handle {
    width: 16px;
    height: 16px;
    background: #c10c0c;
    border-radius: 50%;
    position: absolute;
    top: -6px;
    cursor: pointer;
    border: none;
  }
  #amount {
    font-size: 14px;
    font-weight: bold;
    text-align: center;
    width: 100%;
    margin-top: 10px;
  }
</style>
<div class="col-12 col-md-4 col-lg-3 col-xl-2dot5 col-xxl-2">
  <input type="checkbox" id="show-hide-filter">
  <label id="menu-left-overlay" for="show-hide-filter"></label>

  <div id="menu-left">
    <div class="close-products-filter">
      <label class="btn" for="show-hide-filter"><i class="fa fa-times"></i></label>
    </div>

    <form id="CollectionFiltersForm" class="options-filter">
      <!-- Filter Actions -->
      <div class="filter-actions">
        <div class="row">
          <div class="ft-btn col-6 text-center mb-3">
            <a class="btn filter-btn text-uppercase text-white rounded-0 apply ml-0" href="{{ collection.url }}"
              >Reset</a
            >
          </div>
          <div class="ft-btn col-6 text-center">
            <button type="submit" class="btn filter-btn text-uppercase text-white rounded-0 apply applyPrices ml-0">
              Filter
            </button>
          </div>
        </div>
      </div>

      <div class="filter-store accordion" id="accordionExample">
        {% for filter in collection.filters %}
          {% case filter.type %}
            {%- when 'list' -%}
              <!-- Brand / Other List Filters -->
              <div class="product-categories card option-filters-trigger" data-name="{{ filter.label | escape }}">
                <h3 data-toggle="collapse" aria-expanded="true" data-target="#optionsCollapse-{{ filter.param_name }}">
                  {{ filter.label }}
                </h3>
                <div id="optionsCollapse-{{ filter.param_name }}" class="collapse show">
                  <fieldset>
                    {% for value in filter.values %}
                      <label class="custom-control black-checkbox brands-container">
                        <input
                          type="checkbox"
                          name="{{ value.param_name }}"
                          value="{{ value.value }}"
                          class="fill-control-input live-filter"
                          {% if value.active %}
                            checked
                          {% endif %}
                          {% if value.count == 0 and value.active == false %}
                            disabled
                          {% endif %}
                        >
                        <span class="fill-control-indicator"></span>
                        <span class="fill-control-description">{{ value.label }}</span>
                      </label>
                    {% endfor %}
                  </fieldset>
                </div>
              </div>

            {%- when 'price_range' -%}
              <!-- Price Range -->
              <div class="product-categories card">
                <h3 data-toggle="collapse" aria-expanded="true" data-target="#collapseTwo">
                  Price Range <span class="price-range-currency">({{ cart.currency.iso_code }})</span>
                </h3>
                <div id="collapseTwo" class="collapse show">
                  <div id="slider-range" data-currency="{{ cart.currency.iso_code }}"></div>
                  <div class="price-r d-block pt-4 align-items-center" id="count-number">
                    <input
                      type="hidden"
                      class="live-filter min-price"
                      name="{{ filter.min_value.param_name }}"
                      data-price="{{ filter.min_value.value | default: filter.range_min }}"
                      value="{{ filter.min_value.value | default: filter.range_min }}"
                    >
                    <input
                      type="hidden"
                      class="live-filter max-price"
                      name="{{ filter.max_value.param_name }}"
                      data-price="{{ filter.max_value.value | default: filter.range_max }}"
                      value="{{ filter.max_value.value | default: filter.range_max }}"
                    >
                    <span class="d-block">
                      <input type="text" id="amount" class="border-0 font-weight-bold" readonly>
                    </span>
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </form>
  </div>
</div>
<script>
  $(document).ready(function () {
    /* ==== Accordion Toggle ==== */
    $('.product-categories h3').on('click', function () {
      var $header = $(this);
      var $target = $($header.data('target'));
      if ($target.hasClass('show')) {
        $target.removeClass('show').slideUp(300);
        $header.attr('aria-expanded', 'false');
      } else {
        $target.addClass('show').slideDown(300);
        $header.attr('aria-expanded', 'true');
      }
    });

    /* ==== Price Range Slider ==== */
    var $slider = $('#slider-range'),
      $minInput = $('.min-price'),
      $maxInput = $('.max-price'),
      $amount = $('#amount');

    if ($slider.length) {
      var minPrice = parseInt($minInput.attr('value')) || 0;
      var maxPrice = parseInt($maxInput.attr('value')) || 500;
      var currentMin = parseInt($minInput.val()) || minPrice;
      var currentMax = parseInt($maxInput.val()) || maxPrice;

      $slider.slider({
        range: true,
        min: minPrice,
        max: maxPrice,
        values: [currentMin, currentMax],
        slide: function (event, ui) {
          $amount.val('$' + ui.values[0] + ' - $' + ui.values[1]);
          $minInput.val(ui.values[0]);
          $maxInput.val(ui.values[1]);
        },
        change: function () {
          $('.applyPrices').addClass('hasChanged');
        },
      });

      $amount.val('$' + $slider.slider('values', 0) + ' - $' + $slider.slider('values', 1));
    }

    /* ==== Filter Button Submit ==== */
    $('.applyPrices').on('click', function (e) {
      e.preventDefault();
      $('#CollectionFiltersForm').submit();
    });
  });
</script>
